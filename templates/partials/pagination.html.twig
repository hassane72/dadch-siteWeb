<nav aria-label="..." class="blog-post-nav wow slideInUp">
                  <ul class="pagination pagination-md pagination-blog">
                    <li class="page-item {% if page == 1 %} disabled {% endif %}">
                      <a class="page-link" href="{{path(route, {'page': page - 1})}}" tabindex="-1" aria-label="Previous">
                        <span aria-hidden="true">Prev</span>
                        <span class="sr-only">Previous</span>
                      </a>
                    </li>
                    {% for i in 1..pages %}
                        {% if i != 0 %}  
                         <li class="page-item {% if page == i %} active {% endif %}">
                            <a class="page-link" href="{{path(route, {'page': i})}}">{{i}}</a>
                        </li>
                        {% endif %} 
                    {% endfor %}
                    <li class="page-item {% if page == pages %} disabled {% endif %}">
                      <a class="page-link" href="{{path(route, {'page': page + 1})}}" aria-label="Next">
                        <span aria-hidden="true">Next</span>
                        <span class="sr-only">Next</span>
                      </a>
                    </li>
                  </ul>
</nav>   